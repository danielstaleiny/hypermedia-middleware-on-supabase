{
  "compilerOptions": {
    "noImplicitAny": false,
    "lib": ["deno.window"],
    "strict": false
  },
  "fmt": {
    "files": {
      "include": ["src/"],
      "exclude": ["src/testdata/"]
    },
    "options": {
      "lineWidth": 80,
      "indentWidth": 2,
      "singleQuote": true,
      "proseWrap": "preserve",
      "semiColons": false
    }
  }
}
